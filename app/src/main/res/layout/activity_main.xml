<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:id="@+id/cozumEkrani"
        android:textSize="64dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:layout_above="@+id/sonucEkrani"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/sonucEkrani"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="18dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons_layout"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:paddingVertical="16dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_AC"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="50dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="AC"
                android:textColor="#FF5722"
                android:textSize="22dp"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/button_acik_parantez"
                android:layout_width="50dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_weight="1"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="#FF5722"
                android:backgroundTint="#000000"
                android:text="(" />
            <Button
                android:id="@+id/button_kapali_parantez"
                android:layout_width="50dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_weight="1"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="#FF5722"
                android:backgroundTint="#000000"
                android:text=")" />
            <Button
                android:id="@+id/button_bolme"
                android:layout_width="50dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_weight="1"
                android:textSize="36dp"
                android:layout_margin="12dp"
                android:textColor="#FF5722"
                android:backgroundTint="#000000"
                android:text="รท" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_7"
                android:layout_width="50dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_weight="1"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#000000"
                android:text="7" />
            <Button
                android:id="@+id/button_8"
                android:layout_width="50dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_weight="1"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#000000"
                android:text="8" />
            <Button
                android:id="@+id/button_9"
                android:layout_width="50dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_weight="1"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#000000"
                android:text="9" />
            <Button
                android:id="@+id/button_carpma"
                android:layout_width="50dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_weight="1"
                android:textSize="36dp"
                android:layout_margin="12dp"
                android:textColor="#FF5722"
                android:backgroundTint="#000000"
                android:text="ร" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_4"
                android:layout_width="50dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_weight="1"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#000000"
                android:text="4" />
            <Button
                android:id="@+id/button_5"
                android:layout_width="50dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_weight="1"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#000000"
                android:text="5" />
            <Button
                android:id="@+id/button_6"
                android:layout_width="50dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_weight="1"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#000000"
                android:text="6" />
            <Button
                android:id="@+id/button_cikarma"
                android:layout_width="50dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_weight="1"
                android:textSize="36dp"
                android:layout_margin="12dp"
                android:textColor="#FF5722"
                android:backgroundTint="#000000"
                android:text="-" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_1"
                android:layout_width="50dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_weight="1"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#000000"
                android:text="1" />
            <Button
                android:id="@+id/button_2"
                android:layout_width="50dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_weight="1"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#000000"
                android:text="2" />
            <Button
                android:id="@+id/button_3"
                android:layout_width="50dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
